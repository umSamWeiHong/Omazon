<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="menuBar" alignment="CENTER" prefHeight="28.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.gui.Controller.MenuBarController">
   <children>
      <Button fx:id="menuButton" mnemonicParsing="false" prefHeight="38.0" prefWidth="40.0">
         <HBox.margin>
            <Insets bottom="1.0" left="5.0" right="1.0" top="1.0" />
         </HBox.margin>
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/menubar/menu.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="Menu" />
         </tooltip>
      </Button>
      <Region prefHeight="38.0" prefWidth="163.0" HBox.hgrow="ALWAYS" />
      <ImageView fx:id="logo" fitHeight="32.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/logo_full.png" />
         </image>
         <HBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </HBox.margin>
      </ImageView>
      <Region prefHeight="38.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
      <Button fx:id="exploreButton" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="38.0" prefWidth="40.0">
         <HBox.margin>
            <Insets bottom="1.0" left="1.0" top="1.0" />
         </HBox.margin>
         <graphic>
            <ImageView fx:id="explore" fitHeight="27.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/menubar/explore_static.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <tooltip>
            <Tooltip text="Explore" />
         </tooltip>
      </Button>
      <Button fx:id="notificationButton" mnemonicParsing="false" prefHeight="38.0" prefWidth="40.0">
         <HBox.margin>
            <Insets bottom="1.0" left="3.0" top="1.0" />
         </HBox.margin>
         <graphic>
            <ImageView fx:id="notification" fitHeight="30.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/menubar/notification_static.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <tooltip>
            <Tooltip text="Notifications" />
         </tooltip>
      </Button>
      <Button fx:id="logoutButton" mnemonicParsing="false" prefHeight="38.0" prefWidth="40.0">
         <HBox.margin>
            <Insets bottom="1.0" left="3.0" right="5.0" top="1.0" />
         </HBox.margin>
         <graphic>
            <ImageView fx:id="logout" fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/menubar/logout_static.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <tooltip>
            <Tooltip text="Logout" />
         </tooltip>
      </Button>
   </children>
</HBox>
